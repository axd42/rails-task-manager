
<div class="container">
  <div class="d-flex">
    <h1 class="m-3"><%= @task.title %></h1>
    <div class="btn btn-warning">
      <%= link_to "Edit", edit_task_path%>
      <%= link_to "Delete",
        task_path(@task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </div>
  </div>
  <p><%= @task.details%></p>
  <%= link_to "Back to my tasks", tasks_path%>
</div>
